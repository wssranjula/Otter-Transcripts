# ==================================================
# PRODUCTION ENVIRONMENT VARIABLES TEMPLATE
# ==================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==================================================
# Neo4j Configuration
# ==================================================
NEO4J_URI=bolt://your-instance.databases.neo4j.io:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j

# ==================================================
# Mistral AI Configuration
# ==================================================
MISTRAL_API_KEY=your-mistral-api-key
MISTRAL_MODEL=mistral-large-latest
MISTRAL_EMBED_MODEL=mistral-embed

# ==================================================
# PostgreSQL Configuration (Optional - for vector embeddings)
# ==================================================
POSTGRES_ENABLED=false
POSTGRES_CONNECTION_STRING=postgresql://user:password@host:5432/database?sslmode=require

# ==================================================
# Google Drive Configuration
# ==================================================
GOOGLE_DRIVE_FOLDER_NAME=RAG Documents
GOOGLE_DRIVE_FOLDER_ID=
GOOGLE_DRIVE_CREDENTIALS_FILE=config/credentials.json
GOOGLE_DRIVE_TOKEN_FILE=config/token.pickle

# ==================================================
# Twilio WhatsApp Configuration
# ==================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+14155238886

# ==================================================
# Service Configuration
# ==================================================
# Enable/disable services
WHATSAPP_ENABLED=true
GDRIVE_ENABLED=true

# Google Drive monitoring interval (seconds)
GDRIVE_MONITOR_INTERVAL=60

# Auto-start Google Drive monitoring on server startup
GDRIVE_AUTO_START=true

# ==================================================
# Application Configuration
# ==================================================
# Server port
PORT=8000

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Environment (development, production)
ENVIRONMENT=production

